<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4D4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="417dp"
        android:layout_height="64dp"
        android:background="#F4F4D4"
        android:clickable="false"
        android:ems="10"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Select the type of restaurant you are looking for"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/btnStringRequest"
        android:layout_width="423dp"
        android:layout_height="63dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#F4F4D4"
        android:text="Dining Centers"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="411dp"
        android:layout_height="88dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:shadowColor="#FF0000"
        android:singleLine="false"
        android:text="Welcome to Rate Your Dishes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#F44336"
        android:textIsSelectable="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnJsonRequest"
        android:layout_width="431dp"
        android:layout_height="61dp"
        android:backgroundTint="#F4F4D4"
        android:text="Cafes"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/btnStringRequest"
        tools:layout_editor_absoluteX="-8dp" />

    <Button
        android:id="@+id/btnImageRequest"
        android:layout_width="263dp"
        android:layout_height="66dp"
        android:text="Image Request"
        app:layout_constraintTop_toBottomOf="@+id/btnJsonRequest"
        tools:layout_editor_absoluteX="64dp" />

</android.support.constraint.ConstraintLayout>