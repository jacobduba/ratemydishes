<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4D4">

    <TextView
        android:id="@+id/welcomeText4"
        android:layout_width="411dp"
        android:layout_height="88dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:shadowColor="#FF0000"
        android:singleLine="false"
        android:text="Fast Casual"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#F44336"
        android:textIsSelectable="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        android:text="demo note: image request"
        android:textAlignment="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diningLocations" />

    <Button
        android:id="@+id/btnImageReq"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:background="#F44336"
        android:text="Press to see fast casual"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText4" />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imgNetwork"
        android:layout_width="377dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="18dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnImageReq"></com.android.volley.toolbox.NetworkImageView>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="393dp"
        android:layout_height="150dp"
        android:layout_marginTop="31dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgNetwork"></ImageView>

</android.support.constraint.ConstraintLayout>