<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4D4"
    tools:context=".restaurantList">

    <Button
        android:id="@+id/toConvenienceStore"
        android:layout_width="424dp"
        android:layout_height="61dp"
        android:backgroundTint="#F4F4D4"
        android:text="Convenience Store"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toGetAndGoList" />

    <Button
        android:id="@+id/toGetAndGoList"
        android:layout_width="424dp"
        android:layout_height="61dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#F4F4D4"
        android:text="Get and Go"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toFastCasualList" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="417dp"
        android:layout_height="64dp"
        android:background="#F4F4D4"
        android:clickable="false"
        android:ems="10"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Select the type of restaurant you are looking for"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/toDiningCentersList"
        android:layout_width="423dp"
        android:layout_height="63dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="#F4F4D4"
        android:text="Dining Centers"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="411dp"
        android:layout_height="88dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:shadowColor="#FF0000"
        android:singleLine="false"
        android:text="Welcome to Rate Your Dishes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#F44336"
        android:textIsSelectable="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toCafeList"
        android:layout_width="431dp"
        android:layout_height="61dp"
        android:backgroundTint="#F4F4D4"
        android:text="Cafes"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/toDiningCentersList"
        tools:layout_editor_absoluteX="-8dp" />

    <Button
        android:id="@+id/toFastCasualList"
        android:layout_width="424dp"
        android:layout_height="61dp"
        android:backgroundTint="#F4F4D4"
        android:text="Fast Casual"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/toCafeList"
        tools:layout_editor_absoluteX="-6dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="211dp"
        android:layout_height="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/clipart1890830"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toConvenienceStore"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>