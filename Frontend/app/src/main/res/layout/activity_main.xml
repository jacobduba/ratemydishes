<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4D4"
    android:foregroundTint="#F10606"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/welcomeText"
        android:layout_width="411dp"
        android:layout_height="88dp"
        android:layout_marginBottom="2dp"
        android:autofillHints=""
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#FF0000"
        android:singleLine="false"
        android:text="@string/welcome_to_rate_your_dishes"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#F44336"
        android:textIsSelectable="false"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="417dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:autofillHints=""
        android:background="#F4F4D4"
        android:clickable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        tools:text="Select the type of restaurant you are" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="417dp"
        android:layout_height="58dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/looking_for"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/toCafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <Button
        android:id="@+id/toCafe"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"
        android:background="#F44336"
        android:backgroundTint="#F44336"
        android:text="@string/cafe"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/toDiningCenters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

    <Button
        android:id="@+id/toDiningCenters"
        android:layout_width="413dp"
        android:layout_height="57dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="280dp"
        android:text="@string/dining_centers"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toCafe" />

</androidx.constraintlayout.widget.ConstraintLayout>