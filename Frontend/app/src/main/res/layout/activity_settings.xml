<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4D4"
        tools:context=".DiningCentersList">


        <Button
            android:id="@+id/changePassword"
            android:layout_width="429dp"
            android:layout_height="56dp"
            android:layout_marginTop="84dp"
            android:background="#F44336"
            android:backgroundTint="#F44336"
            android:text="Change Password"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText5" />

        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="429dp"
            android:layout_height="56dp"
            android:layout_marginTop="152dp"
            android:background="#F44336"
            android:backgroundTint="#F44336"
            android:text="Delete Account"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText5" />

        <Button
            android:id="@+id/toAdmin"
            android:layout_width="429dp"
            android:layout_height="56dp"
            android:layout_marginTop="516dp"
            android:background="#F44336"
            android:backgroundTint="#F44336"
            android:text="Admin Settings"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText5" />

        <Button
            android:id="@+id/toLogin"
            android:layout_width="429dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="#F44336"
            android:backgroundTint="#F44336"
            android:text="Logout"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText5" />

        <TextView
            android:id="@+id/welcomeText5"
            android:layout_width="411dp"
            android:layout_height="88dp"
            android:background="#F44336"
            android:backgroundTint="#F44336"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:shadowColor="#FF0000"
            android:singleLine="false"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textColorHighlight="#F44336"
            android:textIsSelectable="false"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/adminToSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:background="#F44336"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="?attr/actionModeCloseDrawable" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>